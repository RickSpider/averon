<zk>
	<!-- Defines the application's name -->
	<preference>
		<name>org.zkoss.zk.ui.WebApp.name</name>
		<value>Averon</value>
	</preference>

	
	<library-property>
		<name>org.zkoss.zul.Button.mold</name>
		<value>trendy</value>
	</library-property>
	
	
	<library-property>
		<name>org.zkoss.zul.grid.rod</name>
		<value>true</value>
	</library-property>
	<!-- [ZK EE]
		Turn on if you want to enable the render-on-demand feature for listbox.
		It improves the performance for huge listbox.
		Default: false
	-->
	<library-property>
		<name>org.zkoss.zul.listbox.rod</name>
		<value>true</value>
	</library-property>

<!-- Permite que ZK acepte peticiones AJAX desde el proxy -->
<!-- 	 <desktop-config>
        
        <update-uri-check>false</update-uri-check>
    </desktop-config>  -->
    
    <library-property>
    <name>org.zkoss.zk.ui.http.forwardedPrefix</name>
    <value>/averon</value>
	</library-property>
	
	<library-property>
		<name>org.zkoss.theme.preferred</name>
		<value>iceblue_c</value>
	</library-property>
	
	<listener>
		<listener-class>com.doxacore.util.OpenSessionInViewListener
		</listener-class>
	</listener>
	
	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/WEB-INF/error.zul</location>
	</error-page>
	
	<device-config>
		<device-type>ajax</device-type>
		<automatic-timeout>true</automatic-timeout>
		<timeout-uri>/timeout.zul</timeout-uri>
		<session-timeout>3600000</session-timeout>
	</device-config>
	
	<!-- //Esto solo usar cuando no anda el calendar   --> 
	<language-config>
		<addon-uri>/WEB-INF/lang-addon.xml</addon-uri>
	</language-config>
	
	
</zk>
